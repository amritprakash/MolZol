<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="co.molzol.molzol.StoresFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/popular_stores"
        android:id="@+id/stores"
        android:gravity="center_vertical"
        android:layout_marginBottom="1dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@android:color/background_light"
        android:textColor="@color/primary_dark_material_dark" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/flipKartImage"
            android:src="@drawable/flipkart"
            android:background="@android:mipmap/sym_def_app_icon"
            android:contentDescription="@string/flipkart"
            android:clickable="true"
            android:onClick="goToStore"
            android:layout_margin="20dp"
            android:scaleType="fitXY" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/amazonImage"
            android:src="@drawable/amazon"
            android:background="@android:mipmap/sym_def_app_icon"
            android:contentDescription="@string/flipkart"
            android:clickable="true"
            android:onClick="goToStore"
            android:layout_margin="20dp"
            android:layout_toEndOf="@id/flipKartImage"
            android:scaleType="fitXY" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/snapDealImage"
            android:src="@drawable/snapdeal"
            android:background="@android:mipmap/sym_def_app_icon"
            android:contentDescription="@string/flipkart"
            android:clickable="true"
            android:onClick="goToStore"
            android:layout_margin="20dp"
            android:layout_toEndOf="@id/amazonImage"
            android:scaleType="fitXY" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/infibeamImage"
            android:src="@drawable/infibeam"
            android:background="@android:mipmap/sym_def_app_icon"
            android:contentDescription="@string/flipkart"
            android:clickable="true"
            android:onClick="goToStore"
            android:layout_margin="20dp"
            android:layout_toEndOf="@id/snapDealImage"
            android:scaleType="fitXY" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ebayImage"
            android:src="@drawable/ebay"
            android:background="@android:mipmap/sym_def_app_icon"
            android:contentDescription="@string/flipkart"
            android:clickable="true"
            android:onClick="goToStore"
            android:layout_below="@+id/flipKartImage"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:layout_margin="20dp" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/shopcluesImage"
            android:src="@drawable/shopclues"
            android:background="@android:mipmap/sym_def_app_icon"
            android:contentDescription="@string/flipkart"
            android:clickable="true"
            android:onClick="goToStore"
            android:layout_below="@+id/infibeamImage"
            android:layout_toEndOf="@+id/myntraImage"
            android:scaleType="fitXY"
            android:layout_margin="20dp" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/myntraImage"
            android:src="@drawable/myntra"
            android:background="@android:mipmap/sym_def_app_icon"
            android:contentDescription="@string/flipkart"
            android:clickable="true"
            android:onClick="goToStore"
            android:layout_below="@+id/snapDealImage"
            android:layout_toEndOf="@+id/jabongImage"
            android:scaleType="fitXY"
            android:layout_margin="20dp" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/jabongImage"
            android:src="@drawable/jabong"
            android:background="@android:mipmap/sym_def_app_icon"
            android:contentDescription="@string/flipkart"
            android:clickable="true"
            android:onClick="goToStore"
            android:layout_below="@+id/amazonImage"
            android:layout_toEndOf="@+id/ebayImage"
            android:scaleType="fitXY"
            android:layout_margin="20dp" />

    </RelativeLayout>

</LinearLayout>
