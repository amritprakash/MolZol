<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.molzol.molzol.HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment android:name="co.molzol.molzol.StoresFragment"
        android:id="@+id/storeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_stores"
        class="co.molzol.molzol.StoresFragment" />

        <fragment android:name="co.molzol.molzol.DealsFragment"
        android:id="@+id/dealsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_deals"
        class="co.molzol.molzol.DealsFragment"
        android:layout_marginTop="5dp" />

        <fragment android:name="co.molzol.molzol.FlipkartOffersFragment"
        android:id="@+id/flipKartOffersFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_flipkart_offers"
        class="co.molzol.molzol.FlipkartOffersFragment"
        android:layout_marginTop="5dp" />

        <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/large_text"
        android:layout_marginTop="5dp"
        android:background="@android:color/background_light" />-->
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
